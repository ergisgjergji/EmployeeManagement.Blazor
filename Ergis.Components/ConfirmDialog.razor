@if (IsVisible)
{
    <div class="modal fade show d-block" id="confirmDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> @Title </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                            @onclick="() => OnConfirmationChange(false)">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Message
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" @onclick="() => OnConfirmationChange(false)">@CancelBtn</button>
                    <button type="button" class="btn btn-success" @onclick="() => OnConfirmationChange(true)">@ConfirmBtn</button>
                </div>
            </div>
        </div>
    </div>
}
